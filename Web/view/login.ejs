<div class="container">
    <div class="row" id="pwd-container">
        <div class="col-md-4 col-md-offset-4">
            <section class="login-form">
                <form method="post" id="connectionform" action="/login" role="login">
                    <h4 style="color:#ff0300"> <%= erreur %> </h4>
                    <h3> Login To STREAM <i class="fa fa-video-camera" aria-hidden="true"></i></h3>

                    <input type="text" name="identifiant" placeholder="Identifiant" required
                           class="form-control input-lg"/>
                    <input type="password" name="pwd" class="form-control input-lg" id="password" placeholder="Password"
                           required/>

                    <div class="pwstrength_viewport_progress"></div>

                    <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Sign in</button>
                    <div>
                        <a href="/createaccount">Create account</a> or <a href="#">reset password</a>
                    </div>

                </form>
            </section>
        </div>

    </div>
</div>

